<article class="post">
  <header>
    <h1><a href="<%= url(article.slug) %>" tabindex="<%= index + 1 %>"><%= article.title %></a></h1>
    <time class="timeago" data-components="timeago" datetime="<%= article.date.xmlschema %>">
      <%= article.date.strftime "%Y/%m/%d" %>
    </time>
  </header>
  <section>
    <%= markdown article.content %>
  </section>
</article>
