<article class="post">
  <header>
    <h1><a href="<%= url(post.slug) %>" tabindex="<%= defined?(index) ? index : 1 %>"><%= post.title %></a></h1>
    <time class="timeago" data-components="timeago" datetime="<%= post.date.xmlschema %>">
      <%= post.date.strftime "%Y/%m/%d" %>
    </time>
  </header>
  <section>
    <%= markdown post.content %>
  </section>
</article>
